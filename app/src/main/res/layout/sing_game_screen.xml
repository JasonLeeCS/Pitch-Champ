<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#364F6B"
    android:padding="16dp">

    <!-- Top section for song name and score -->
    <RelativeLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/pink_border_filled"
        android:padding="16dp">

        <TextView
            android:id="@+id/songNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mary Had A Little Lamb"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_below="@id/songNameTextView"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <!-- Middle section for lyrics -->
    <TextView
        android:id="@+id/lyricsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lyrics"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_below="@id/topSection"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="@drawable/pink_border_filled"
        android:layout_marginTop="20dp"/>

    <!-- Bottom section for pitch and note -->
    <RelativeLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_border_filled"
        android:padding="16dp"
        android:layout_below="@id/lyricsTextView"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/pitchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pitch"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/noteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomSection"
        android:layout_marginTop="24dp"
        android:background="@drawable/pink_border_filled"
        android:padding="8dp"
        android:text="Start"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <!-- Other elements of your layout here -->

</RelativeLayout>
